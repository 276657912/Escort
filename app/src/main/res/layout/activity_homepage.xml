<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".ui.activity.CopyActivity">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            app:srcCompat="@drawable/left_arrow" />

        <LinearLayout
            android:id="@+id/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y.牙牙"
                android:textColor="#FF333333"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID：638469260"
                android:textColor="#FF999999"
                android:textSize="9sp" />
        </LinearLayout>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/head_image"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_margin="20dp"
                    app:srcCompat="@mipmap/test_1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="6"
                            android:textColor="#FF000000"
                            android:textSize="19sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="12"
                            android:textColor="#FF000000"
                            android:textSize="19sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="1.6W"
                            android:textColor="#FF000000"
                            android:textSize="19sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="16.5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="关注"
                            android:textColor="#FF666666"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="粉丝"
                            android:textColor="#FF666666"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="喜欢"
                            android:textColor="#FF666666"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:paddingTop="16.5dp">

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/MyBlackButtonStyle"
                            android:layout_width="110dp"
                            android:layout_height="28dp"
                            android:gravity="center"
                            android:text="喜欢"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="15.5dp"
                            android:layout_height="0dp" />

                        <androidx.appcompat.widget.AppCompatButton
                            style="@style/MyBlackButtonStyle"
                            android:layout_width="110dp"
                            android:layout_height="28dp"
                            android:gravity="center"
                            android:text="关注"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="陕西省  西安市/女/18岁/双子座/健身"
                android:textColor="#FF333333"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="陕西省  西安市/女/18岁/双子座/健身"
                android:textColor="#FF333333"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个性标签："
                    android:textColor="#FF333333"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_stroke_black2"
                    android:text="火锅"
                    android:textColor="#FF333333"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_stroke_black2"
                    android:text="健身"
                    android:textColor="#FF333333"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_stroke_black2"
                    android:text="看电影"
                    android:textColor="#FF333333"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/to_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="18dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="69dp"
                    android:layout_height="69dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/test_8" />

                <ImageView
                    android:layout_width="69dp"
                    android:layout_height="69dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/test_8" />

                <ImageView
                    android:layout_width="69dp"
                    android:layout_height="69dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/test_8" />

                <ImageView
                    android:layout_width="69dp"
                    android:layout_height="69dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/test_8" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="69dp"
                        android:layout_height="69dp"
                        app:srcCompat="@mipmap/test_8" />

                    <TextView
                        android:layout_width="69dp"
                        android:layout_height="69dp"
                        android:background="@drawable/bg_radius_black60"
                        android:gravity="center"
                        android:text="+1"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />
                </FrameLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/video_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>